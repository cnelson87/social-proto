{{#each items}}
	<div class="grid-cell post-{{network}} loading" data-id="{{id}}">


		{{!-- Begin Facebook --}}
		{{#compare network "facebook"}}

			<h3 tabindex="-1">Facebook Post by {{userName}}</h3>

			<a class="social-icon icon-facebook" href="{{postHref}}"
				target="_blank" title="Open Facebook post in a new window"></a>

			<div class="content">
				{{#if contentText}}<p>{{contentText}}</p>{{/if}}
				<div class="cta">
					<a target="_blank" href="https://www.facebook.com/{{entity_id}}/share">Share</a>
					<a target="_blank" href="https://www.facebook.com/{{entity_id}}/comments">Comment</a>
				</div>
			</div>

			{{#if imgSrc}}
			<div class="media">
				<a href="{{postHref}}" target="_blank" title="Open Facebook post in a new window">
					<img src="{{imgSrc}}" alt="" />
				</a>
			</div>
			{{/if}}

		{{/compare}}
		{{!-- End Facebook --}}


		{{!-- Begin Twitter --}}
