{{#each items}}
	<div class="grid-cell post-{{network}} loading" data-id="{{id}}">


		{{!-- Begin Facebook --}}
		{{#compare network "facebook"}}

			<h3 tabindex="-1">Facebook post {{postNum}}{{#if userName}} by {{userName}}{{/if}}</h3>

			<a class="social-icon icon-facebook" href="{{postHref}}"
				target="_blank" title="Facebook post {{postNum}}{{#if userName}} by {{userName}}{{/if}} - opens in a new window"></a>

			<div class="content">
				{{#if contentText}}<p>{{contentText}}</p>{{/if}}
				<div class="cta">
					<a class="action-icon icon-comment" target="_blank"
						title="Comment on Facebook post - opens in a new window"
						href="{{postHref}}{{!-- /comments --}}"></a>
					<a class="action-icon icon-share" target="_blank"
						title="Share Facebook post - opens in a new window"
						href="{{postHref}}{{!-- /share --}}"></a>
				</div>
			</div>

			{{#if imgSrc}}
			<div class="media">
				<a class="{{#if isVideo}}video{{/if}}" href="{{postHref}}" target="_blank" 
					title="Facebook post {{postNum}}{{#if userName}} by {{userName}}{{/if}} - opens in a new window">
					<img src="{{imgSrc}}" alt="" />
				</a>
			</div>
			{{/if}}

		{{/compare}}
		{{!-- End Facebook --}}


		{{!-- Begin Twitter --}}
		{{#compare network "twitter"}}

			<h3 tabindex="-1">Twitter post {{postNum}}{{#if userName}} by {{userName}}{{/if}}</h3>

			<a class="social-icon icon-twitter" href="{{postHref}}"
				target="_blank" title="Twitter post {{postNum}}{{#if userName}} by {{userName}}{{/if}} - opens in a new window"></a>

			<div class="content">
				{{#if contentText}}<p>{{contentText}}</p>{{/if}}
				<div class="cta">
					<a class="action-icon icon-reply" target="_blank"
						title="Reply to Twitter post - opens in a new window"
						href="https://twitter.com/intent/tweet?original_referer=&in_reply_to={{id_str}}"></a>
					<a class="action-icon icon-retweet" target="_blank"
						title="Retweet Twitter post - opens in a new window"
						href="https://twitter.com/intent/retweet?original_referer=&in_reply_to={{id_str}}&tweet_id={{id_str}}"></a>
					<a class="action-icon icon-favorite" target="_blank"
						title="Favorite Twitter post - opens in a new window"
						href="https://twitter.com/intent/favorite?original_referer=&in_reply_to={{id_str}}&tweet_id={{id_str}}"></a>
				</div>
			</div>

			{{#if imgSrc}}
			<div class="media">
				<a class="{{#if isVideo}}video{{/if}}" href="{{postHref}}" target="_blank"
					title="Twitter post {{postNum}}{{#if userName}} by {{userName}}{{/if}} - opens in a new window">
					<img src="{{imgSrc}}" alt="" />
				</a>
			</div>
			{{/if}}

		{{/compare}}
		{{!-- End Twitter --}}


		{{!-- Begin Instagram --}}
		{{#compare network "instagram"}}

			<h3 tabindex="-1">Instagram post {{postNum}}{{#if userName}} by {{userName}}{{/if}}</h3>

			<a class="social-icon icon-instagram" href="{{postHref}}"
